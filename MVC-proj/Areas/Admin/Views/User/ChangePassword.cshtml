@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create New Category</h4>
                    <div asp-validation-summary="ModelOnly"></div>
                    <form class="forms-sample" method="post" asp-controller="User" asp-action="ChangePassword">
                        <div class="form-group">
                            <label asp-for="Username">Username</label>
                            <input readonly class="form-control" asp-for="Username" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OldPassword">Old Password</label>
                            <input class="form-control" asp-for="OldPassword" placeholder="Name">
                            <span class="text-danger" asp-validation-for="OldPassword"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword">New Password</label>
                            <input class="form-control" asp-for="NewPassword" placeholder="Name">
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input class="form-control" asp-for="ConfirmPassword" placeholder="Name">
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidatePartial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script src="https://ckeditor.com/docs/ckeditor5/latest/builds/guides/quick-start.html"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}

